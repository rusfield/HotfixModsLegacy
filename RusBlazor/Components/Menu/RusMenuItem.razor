
<div @onclick="OnClick" class="@($"rus-menu-item {HoverClass()} {Class} {SeparatorClass()}")" id="@Id">
    @ChildContent
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public EventCallback OnItemClick { get; set; }

    [Parameter]
    public bool Hoverable { get; set; } = true;

    [Parameter]
    public string Id { get; set; } = "";

    [Parameter]
    public string Class { get; set; }

    [Parameter]
    public bool Separator { get; set; } = false;

    void OnClick()
    {
        OnItemClick.InvokeAsync();
    }

    string HoverClass()
    {
        return Hoverable ? "hoverable" : "";
    }

    string SeparatorClass()
    {
        return Separator ? "separator" : "";
    }
}
