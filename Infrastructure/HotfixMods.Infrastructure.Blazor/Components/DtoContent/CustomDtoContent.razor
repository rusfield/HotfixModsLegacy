@if (InstancedContent)
{
    @if (ValueIsNull)
    {
        <DtoContentNoValue />
    }
    else
    {
        @ChildContent
    }
}
else
{
    <MudGrid Class="px-6 mt-7">
        @if (ValueIsNull)
        {
            <DtoContentNoValue />
        }
        else
        {
            @ChildContent
        }
    </MudGrid>
}
