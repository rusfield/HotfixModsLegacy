@using HotfixMods.Infrastructure.InfoModels
@using HotfixMods.Infrastructure.Blazor.Components.DtoContent

@inherits DtoContentBase<ItemDto, ItemAppearance>

<StandardDtoContent T="ItemAppearance" >
    <MudItem xs="3" />
    <MudItem xs="6">
        <Placeholder_Element Amount="4" />
        <InlineGroup LeftContentWidth="15" RightContentWidth="15" MiddleContentWidth="70" Merged="false">
            <LeftContent />
            <MiddleContent>
                <Input_Element T="int" @bind-Value="Value.DisplayType" ValueCompare="ValueCompare?.DisplayType" Label="@nameof(Value.DisplayType).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.DisplayType))" />
            </MiddleContent>
            <RightContent />
        </InlineGroup>
        <InlineGroup Merged="false">
            <LeftContent>
                <Input_Element T="int" @bind-Value="Value.DefaultIconFileDataId" ValueCompare="ValueCompare?.DefaultIconFileDataId" Label="@nameof(Value.DefaultIconFileDataId).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.DefaultIconFileDataId))" />
            </LeftContent>
            <MiddleContent>
                <Input_Element T="int" @bind-Value="Value.UiOrder" ValueCompare="ValueCompare?.UiOrder" Label="@nameof(Value.UiOrder).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.UiOrder))" />
            </MiddleContent>
            <RightContent>
                <Input_Element T="int" @bind-Value="Value.TransmogPlayerConditionId" ValueCompare="ValueCompare?.TransmogPlayerConditionId" Label="@nameof(Value.TransmogPlayerConditionId).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.TransmogPlayerConditionId))" />
            </RightContent>
        </InlineGroup>
    </MudItem>
    <MudItem xs="3" />
</StandardDtoContent>

@code {
    ItemAppearanceInfo info = new();
}