@using HotfixMods.Infrastructure.Blazor.Components.Dialogs;
@using HotfixMods.Infrastructure.Blazor.Components.DtoContent

@inject ItemService Service
@inherits PageBase<ItemDto>

<DtoTabsContent T="ItemDto" SaveAsync_Callback="SaveAsync" ValueCompare_Callback="@(async () => ValueCompareAsync<ItemSearch_Dialog>())" />


@code {

    // Temp
    protected override void OnParametersSet()
    {
        if (null == PageTab.Dto)
            PageTab.Dto = new ItemDto();
        base.OnParametersSet();
    }

    async void SaveAsync()
    {
        if (PageTab.Dto != null)
            await Service.SaveAsync((ItemDto)PageTab.Dto);
    }
}
