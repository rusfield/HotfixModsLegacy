@using Microsoft.JSInterop;
@using HotfixMods.Infrastructure.Services
@using HotfixMods.Infrastructure.Blazor.Components.Private

@inject ISnackbar Snackbar

<DialogCloseButton Close_Click="@(() => Dialog.Close())" />    
    <MudDialog>
        <DialogContent>
            <MudStack Justify="Justify.Center" Spacing="5">
                <MudText Align="Align.Center">
                    <MudIcon Class="custom-dialog-icon" Icon="@Icon" />
                </MudText>
                @foreach (var paragraph in Text.Split("\n"))
                {
                    <MudText Align="Align.Center">
                        @paragraph
                    </MudText>
                }
            </MudStack>
        </DialogContent>
    </MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance Dialog { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public string Icon { get; set; } = Icons.Material.Outlined.Info;

}