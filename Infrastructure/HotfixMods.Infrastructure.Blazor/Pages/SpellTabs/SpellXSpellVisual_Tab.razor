@using HotfixMods.Infrastructure.Blazor.Components.DtoContent
@using HotfixMods.Infrastructure.InfoModels

@inherits DtoContentBase<SpellDto, SpellXSpellVisual>

<StandardDtoContent T="SpellXSpellVisual">
    <MudItem xs="3">
        <Input_Element T="decimal" @bind-Value="Value.Probability" ValueCompare="ValueCompare?.Probability" Label="@nameof(Value.Probability).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.Probability))" />
        <Input_Element T="int" @bind-Value="Value.Priority" ValueCompare="ValueCompare?.Priority" Label="@nameof(Value.Priority).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.Priority))" />
        <Input_Element T="int" @bind-Value="Value.Flags2" ValueCompare="ValueCompare?.Flags2" Label="@nameof(Value.Flags2).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.Flags2))" />
        <Input_Element T="byte" @bind-Value="Value.DifficultyId" ValueCompare="ValueCompare?.DifficultyId" Label="@nameof(Value.DifficultyId).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.DifficultyId))" />
    </MudItem>
    <MudItem xs="6">
        <Placeholder_Element Amount="4" />
        <InlineGroup Merged="false">
            <LeftContent>
                <Input_Element T="int" @bind-Value="Value.SpellIconFileId" ValueCompare="ValueCompare?.SpellIconFileId" Label="@nameof(Value.SpellIconFileId).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.SpellIconFileId))" />
            </LeftContent>
            <RightContent>
                <Input_Element T="int" @bind-Value="Value.ActiveIconFileId" ValueCompare="ValueCompare?.ActiveIconFileId" Label="@nameof(Value.ActiveIconFileId).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.ActiveIconFileId))" />
            </RightContent>
        </InlineGroup>
    </MudItem>
    <MudItem xs="3">
        <Input_Element T="ushort" @bind-Value="Value.ViewerUnitConditionId" ValueCompare="ValueCompare?.ViewerUnitConditionId" Label="@nameof(Value.ViewerUnitConditionId).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.ViewerUnitConditionId))" />
        <Input_Element T="uint" @bind-Value="Value.ViewerPlayerConditionId" ValueCompare="ValueCompare?.ViewerPlayerConditionId" Label="@nameof(Value.ViewerPlayerConditionId).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.ViewerPlayerConditionId))" />
        <Input_Element T="ushort" @bind-Value="Value.CasterUnitConditionId" ValueCompare="ValueCompare?.CasterUnitConditionId" Label="@nameof(Value.CasterUnitConditionId).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.CasterUnitConditionId))" />
        <Input_Element T="uint" @bind-Value="Value.CasterPlayerConditionId" ValueCompare="ValueCompare?.CasterPlayerConditionId" Label="@nameof(Value.CasterPlayerConditionId).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.CasterPlayerConditionId))" />
    </MudItem>
</StandardDtoContent>

@code {
    SpellXSpellVisualInfo info = new();
}