            <RightContent>
                <Input_Element T="int" @bind-Value="Value.RecoveryTime" ValueCompare="ValueCompare?.RecoveryTime" Label="@nameof(Value.RecoveryTime).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.RecoveryTime))" />
