@using HotfixMods.Infrastructure.Blazor.Components.DtoContent

@inherits DtoContentBase<SpellVisualKitDto, CloneEffect>

<InstancedDtoContentPage>
    <MudItem xs="3">
        <Input_Element T="int" @bind-Value="Value.DurationMs" ValueCompare="ValueCompare?.DurationMs" Label="@nameof(Value.DurationMs).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(CloneEffect.DurationMs)))" />
        <Input_Element T="int" @bind-Value="Value.DelayMs" ValueCompare="ValueCompare?.DelayMs" Label="@nameof(Value.DelayMs).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(CloneEffect.DelayMs)))" />
        <Input_Element T="int" @bind-Value="Value.FadeInTimeMs" ValueCompare="ValueCompare?.FadeInTimeMs" Label="@nameof(Value.FadeInTimeMs).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(CloneEffect.FadeInTimeMs)))" />
        <Input_Element T="int" @bind-Value="Value.FadeOutTimeMs" ValueCompare="ValueCompare?.FadeOutTimeMs" Label="@nameof(Value.FadeOutTimeMs).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(CloneEffect.FadeOutTimeMs)))" />
    </MudItem>
    <MudItem xs="6">
        <Placeholder_Element Amount="4" />
    </MudItem>
    <MudItem xs="3">
        <Input_Element T="int" @bind-Value="Value.StateSpellVisualKitID" ValueCompare="ValueCompare?.StateSpellVisualKitID" Label="@nameof(Value.StateSpellVisualKitID).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(CloneEffect.StateSpellVisualKitID)))" />
        <Input_Element T="int" @bind-Value="Value.StartSpellVisualKitID" ValueCompare="ValueCompare?.StartSpellVisualKitID" Label="@nameof(Value.StartSpellVisualKitID).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(CloneEffect.StartSpellVisualKitID)))" />
        <Input_Element T="int" @bind-Value="Value.OffsetMatrixID" ValueCompare="ValueCompare?.OffsetMatrixID" Label="@nameof(Value.OffsetMatrixID).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(CloneEffect.OffsetMatrixID)))" />
        <Input_Element T="int" @bind-Value="Value.Flags" ValueCompare="ValueCompare?.Flags" Label="@nameof(Value.Flags).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(CloneEffect.Flags)))" />
    </MudItem>
</InstancedDtoContentPage>

