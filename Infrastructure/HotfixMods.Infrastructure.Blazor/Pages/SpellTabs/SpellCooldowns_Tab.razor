    <MudItem xs="3">
        <Placeholder_Element Amount="3" />
        <Input_Element T="int" @bind-Value="Value.AuraSpellId" ValueCompare="ValueCompare?.AuraSpellId" Label="@nameof(Value.AuraSpellId).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.AuraSpellId))" />
