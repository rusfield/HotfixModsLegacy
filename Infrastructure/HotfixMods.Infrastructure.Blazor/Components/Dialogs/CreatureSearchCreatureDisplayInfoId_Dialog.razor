@using HotfixMods.Infrastructure.Blazor.Components.Private

@inject CreatureService Service

<DialogSearch @ref="dialogSearchRef" Dialog="Dialog">
    <MudText Typo="Typo.h6" Align="Align.Center">Search by Creature Display ID:</MudText>
    <MudNumericField @bind-Value="@CreatureDisplayInfoId" Variant="Variant.Outlined" HideSpinButtons="true" Label="Creature Display Info ID" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Search" OnAdornmentClick="(GetByCreatureDisplayInfoIdAsync)" />
</DialogSearch>

@code {
    [CascadingParameter]
    MudDialogInstance Dialog { get; set; }

    [Parameter]
    public uint? CreatureDisplayInfoId { get; set; }

    DialogSearch? dialogSearchRef;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await GetByCreatureDisplayInfoIdAsync();
        }
        await base.OnAfterRenderAsync(firstRender);
    }

    async Task GetByCreatureDisplayInfoIdAsync()
    {
        if (CreatureDisplayInfoId != null)
        {
            var data = await Service.GetByCreatureDisplayInfoIdAsync((uint)CreatureDisplayInfoId, dialogSearchRef!.SetLoaderProgress);
            if (data != null)
            {
                Dialog.Close(data);
            }
            else
            {
                dialogSearchRef.CancelLoaderWithMessage("No DB2 record found.");
            }
        }
    }
}
