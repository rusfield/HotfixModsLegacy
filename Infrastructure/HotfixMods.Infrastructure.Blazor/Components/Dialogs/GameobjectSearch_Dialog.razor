@using HotfixMods.Infrastructure.Blazor.Components.Private

@inject GameobjectService Service

<DialogSearch @ref="dialogSearchRef" MudDialogInstance="Dialog" GetById_Func="GetByIdAsync" GetNew_Action="GetNew" />

@code {
    [CascadingParameter]
    MudDialogInstance Dialog { get; set; }

    DialogSearch? dialogSearchRef;

    async Task GetByIdAsync(uint? id)
    {
        if (id != null)
        {
            var data = await Service.GetByIdAsync((uint)id, dialogSearchRef!.SetLoaderProgress);
            if (data != null)
            {
                Dialog.Close(data);
            }
            else
            {
                dialogSearchRef.CancelLoaderWithMessage("No DB2 record found.");
            }
        }
    }

    void GetNew()
    {
        var data = Service.GetNew(dialogSearchRef!.SetLoaderProgress);
        Dialog.Close(data);
    } 
}
