@using HotfixMods.Infrastructure.InfoModels
@using HotfixMods.Infrastructure.Blazor.Components.DtoContent

@inherits DtoContentBase<ItemDto, ItemEffect>

<InstancedDtoContentPage>
    <MudItem xs="3">
        <Input_Element T="sbyte" @bind-Value="Value.TriggerType" ValueCompare="ValueCompare?.TriggerType" Label="@nameof(Value.TriggerType).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.TriggerType))" />
        <Input_Element T="int" @bind-Value="Value.CoolDownMSec" ValueCompare="ValueCompare?.CoolDownMSec" Label="@nameof(Value.CoolDownMSec).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.CoolDownMSec))" />
        <Input_Element T="short" @bind-Value="Value.Charges" ValueCompare="ValueCompare?.Charges" Label="@nameof(Value.Charges).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.Charges))" />
    </MudItem>
    <MudItem xs="6">
        <Placeholder_Element Amount="4" />
        <InlineGroup>
            <LeftContent>
                <Input_Element T="int" @bind-Value="Value.SpellId" ValueCompare="ValueCompare?.SpellId" Label="@nameof(Value.SpellId).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.SpellId))" />
            </LeftContent>
            <RightContent>
                <Input_Element T="ushort" @bind-Value="Value.SpellCategoryId" ValueCompare="ValueCompare?.SpellCategoryId" Label="@nameof(Value.SpellCategoryId).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.SpellCategoryId))" />
            </RightContent>
        </InlineGroup>
    </MudItem>
    <MudItem xs="3">
        <Input_Element T="int" @bind-Value="Value.CategoryCoolDownMSec" ValueCompare="ValueCompare?.CategoryCoolDownMSec" Label="@nameof(Value.CategoryCoolDownMSec).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.CategoryCoolDownMSec))" />
        <Input_Element T="ushort" @bind-Value="Value.ChrSpecializationId" ValueCompare="ValueCompare?.ChrSpecializationId" Label="@nameof(Value.ChrSpecializationId).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.ChrSpecializationId))" />
        <Input_Element T="byte" @bind-Value="Value.LegacySlotIndex" ValueCompare="ValueCompare?.LegacySlotIndex" Label="@nameof(Value.LegacySlotIndex).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.LegacySlotIndex))" />
    </MudItem>
</InstancedDtoContentPage>

@code {
    ItemEffectInfo info = new();
}