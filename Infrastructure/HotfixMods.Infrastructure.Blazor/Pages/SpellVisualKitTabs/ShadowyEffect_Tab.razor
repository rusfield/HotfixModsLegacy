@using HotfixMods.Infrastructure.Blazor.Components.DtoContent

@inherits DtoContentBase<SpellVisualKitDto, ShadowyEffect>

<InstancedDtoContentPage>
    <MudItem xs="3">
        <Input_Element T="decimal" @bind-Value="Value.InnerStrength" ValueCompare="ValueCompare?.InnerStrength" Label="@nameof(Value.InnerStrength).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(ShadowyEffect.InnerStrength)))" />
        <Input_Element T="decimal" @bind-Value="Value.OuterStrength" ValueCompare="ValueCompare?.OuterStrength" Label="@nameof(Value.OuterStrength).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(ShadowyEffect.OuterStrength)))" />
        <Input_Element T="sbyte" @bind-Value="Value.Flags" ValueCompare="ValueCompare?.Flags" Label="@nameof(Value.Flags).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(ShadowyEffect.Flags)))" />
        <Input_Element T="decimal" @bind-Value="Value.InitialDelay" ValueCompare="ValueCompare?.InitialDelay" Label="@nameof(Value.InitialDelay).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(ShadowyEffect.InitialDelay)))" />
    </MudItem>
    <MudItem xs="6">
        <Placeholder_Element Amount="4"/>
        <InlineGroup Merged="false">
            <LeftContent>
                <Input_Element T="int" @bind-Value="Value.PrimaryColor" ValueCompare="ValueCompare?.PrimaryColor" Label="@nameof(Value.PrimaryColor).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(ShadowyEffect.PrimaryColor)))" />
            </LeftContent>
            <RightContent>
                <Input_Element T="int" @bind-Value="Value.SecondaryColor" ValueCompare="ValueCompare?.SecondaryColor" Label="@nameof(Value.SecondaryColor).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(ShadowyEffect.SecondaryColor)))" />
            </RightContent>
        </InlineGroup>
        <InlineGroup>
            <LeftContent>
                <Input_Element T="decimal" @bind-Value="Value.FadeInTime" ValueCompare="ValueCompare?.FadeInTime" Label="@nameof(Value.FadeInTime).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(ShadowyEffect.FadeInTime)))" />
            </LeftContent>
            <MiddleContent>
                <Input_Element T="decimal" @bind-Value="Value.Duration" ValueCompare="ValueCompare?.Duration" Label="@nameof(Value.Duration).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(ShadowyEffect.Duration)))" />
            </MiddleContent>
            <RightContent>
                <Input_Element T="decimal" @bind-Value="Value.FadeOutTime" ValueCompare="ValueCompare?.FadeOutTime" Label="@nameof(Value.FadeOutTime).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(ShadowyEffect.FadeOutTime)))" />
            </RightContent>
        </InlineGroup>
    </MudItem>
    <MudItem xs="3">
        <Input_Element T="int" @bind-Value="Value.CurveID" ValueCompare="ValueCompare?.CurveID" Label="@nameof(Value.CurveID).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(ShadowyEffect.CurveID)))" />
        <Input_Element T="decimal" @bind-Value="Value.Value" ValueCompare="ValueCompare?.Value" Label="@nameof(Value.Value).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(ShadowyEffect.Value)))" />
        <Input_Element T="uint" @bind-Value="Value.Priority" ValueCompare="ValueCompare?.Priority" Label="@nameof(Value.Priority).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(ShadowyEffect.Priority)))" />
        <Input_Element T="sbyte" @bind-Value="Value.AttachPos" ValueCompare="ValueCompare?.AttachPos" Label="@nameof(Value.AttachPos).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(nameof(ShadowyEffect.AttachPos)))" />
    </MudItem>
</InstancedDtoContentPage>