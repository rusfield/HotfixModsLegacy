@using HotfixMods.Infrastructure.Blazor.Components.Dialogs;
@using HotfixMods.Infrastructure.Blazor.Components.DtoContent

@inject SoundKitService Service
@inherits PageBase<SoundKitDto>

<DtoTabsContent T="SoundKitDto" SaveAsync_Func="SaveAsync" ValueCompare_Callback="@(async () => ValueCompareAsync<SoundKitSearch_Dialog>())" />


@code {

    // Temp
    protected override void OnParametersSet()
    {
        if (null == PageTab.Dto)
            PageTab.Dto = new SoundKitDto();
        base.OnParametersSet();
    }

    async Task<bool> SaveAsync()
    {
        if (PageTab.Dto != null)
            return await Service.SaveAsync((SoundKitDto)PageTab.Dto);
        return false;
    }
}
