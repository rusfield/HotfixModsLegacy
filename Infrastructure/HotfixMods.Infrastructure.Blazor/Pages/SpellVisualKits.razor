@using HotfixMods.Infrastructure.Blazor.Components.Dialogs;
@using HotfixMods.Infrastructure.Blazor.Components.DtoContent

@inject SpellVisualKitService Service
@inherits PageBase<SpellVisualKitDto>

<DtoTabsContent T="SpellVisualKitDto" SaveAsync_Func="SaveAsync" ValueCompare_Callback="@(async () => ValueCompareAsync<SpellVisualKitSearch_Dialog>())" />


@code {

    // Temp
    protected override void OnParametersSet()
    {
        if (null == PageTab.Dto)
            PageTab.Dto = new SpellVisualKitDto();
        base.OnParametersSet();
    }

    async Task<bool> SaveAsync()
    {
        if (PageTab.Dto != null)
            return await Service.SaveAsync((SpellVisualKitDto)PageTab.Dto);
        return false;
    }
}
