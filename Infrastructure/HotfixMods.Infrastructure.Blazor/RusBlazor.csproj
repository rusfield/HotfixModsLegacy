<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

	<ItemGroup>
		<EmbeddedResource Include="wwwroot\**\*">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
	  <Content Remove="wwwroot\css\icons.css" />
	  <Content Remove="wwwroot\fonts\icons.woff2" />
	</ItemGroup>

  <ItemGroup>
    <None Remove="Components\Checkbox\RusCheckbox.razor.css" />
    <None Remove="Components\Menu\RusMenuItem.razor.css" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Components\Checkbox\RusCheckbox.razor.css" />
    <Content Include="Components\Menu\RusMenuItem.razor.css" />
  </ItemGroup>


  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Forms" Version="7.0.10" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.10" />
  </ItemGroup>

</Project>
