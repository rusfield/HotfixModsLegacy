@typeparam T where T : class, new()

<MudGrid Class="px-6 mt-7">
    @if (valueIsNull)
    {
        <MudItem xs="12">
            <Placeholder_Element Amount="4" />
        </MudItem>
        <MudItem xs="4" />
        <MudItem xs="4">
            <MudButton OnClick="CreateValue" Variant="Variant.Outlined">Init</MudButton>
        </MudItem>
        <MudItem xs="4" />
    }
    else
    {
        @ChildContent
    }
</MudGrid>