
<div @onclick="OnClick" class="rus-menu-item @HoverClass()" style="@HoverStyle()" id="@Id">
    @ChildContent
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public EventCallback OnItemClick { get; set; }

    [Parameter]
    public bool Hoverable { get; set; } = true;

    [Parameter]
    public string Id { get; set; } = "";

    void OnClick()
    {
        OnItemClick.InvokeAsync();
    }

    string HoverClass()
    {
        return Hoverable ? "hoverable" : "";
    }

    string HoverStyle()
    {
        return Hoverable ? "" : "cursor:auto !important;";
    }
}
