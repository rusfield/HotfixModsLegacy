@using HotfixMods.Infrastructure.InfoModels
@using HotfixMods.Infrastructure.Blazor.Components.DtoContent

@inherits DtoContentBase<SpellVisualKitDto, BeamEffect>

<InstancedDtoContentPage>
    <MudItem xs="3">
        <InlineGroup>
            <LeftContent>
                <Input_Element T="int" @bind-Value="Value.SourceOffset" ValueCompare="ValueCompare?.SourceOffset" Label="@nameof(Value.SourceOffset).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.SourceOffset))" />
            </LeftContent>
            <RightContent>
                <Input_Element T="int" @bind-Value="Value.DestOffset" ValueCompare="ValueCompare?.DestOffset" Label="@nameof(Value.DestOffset).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.DestOffset))" />
            </RightContent>
        </InlineGroup>
        <InlineGroup>
            <LeftContent>
                <Input_Element T="int" @bind-Value="Value.SourcePositionerID" ValueCompare="ValueCompare?.SourcePositionerID" Label="@nameof(Value.SourcePositionerID).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.SourcePositionerID))" />
            </LeftContent>
            <RightContent>
                <Input_Element T="int" @bind-Value="Value.DestPositionerID" ValueCompare="ValueCompare?.DestPositionerID" Label="@nameof(Value.DestPositionerID).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.DestPositionerID))" />
            </RightContent>
        </InlineGroup>
        <InlineGroup>
            <LeftContent>
                <Input_Element T="int" @bind-Value="Value.SourceAttachID" ValueCompare="ValueCompare?.SourceAttachID" Label="@nameof(Value.SourceAttachID).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.SourceAttachID))" />
            </LeftContent>
            <RightContent>
                <Input_Element T="int" @bind-Value="Value.DestAttachID" ValueCompare="ValueCompare?.DestAttachID" Label="@nameof(Value.DestAttachID).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.DestAttachID))" />
            </RightContent>
        </InlineGroup>
    </MudItem>
    <MudItem xs="6">
        <Placeholder_Element Amount="4" />
        <InlineGroup LeftContentWidth="20" RightContentWidth="20" MiddleContentWidth="60">
            <LeftContent />
            <MiddleContent>
                <Input_Element T="int" @bind-Value="Value.BeamID" ValueCompare="ValueCompare?.BeamID" Label="@nameof(Value.BeamID).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.BeamID))" />
            </MiddleContent>
            <RightContent />
        </InlineGroup>
    </MudItem>
    <MudItem xs="3">
        <Input_Element T="decimal" @bind-Value="Value.SourceMinDistance" ValueCompare="ValueCompare?.SourceMinDistance" Label="@nameof(Value.SourceMinDistance).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.SourceMinDistance))" />
        <Input_Element T="decimal" @bind-Value="Value.FixedLength" ValueCompare="ValueCompare?.FixedLength" Label="@nameof(Value.FixedLength).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.FixedLength))" />
        <Input_Element T="int" @bind-Value="Value.Flags" ValueCompare="ValueCompare?.Flags" Label="@nameof(Value.Flags).ToDisplayName()" OnInfoAdornmentClick="@(OpenInfoDialog(info.Flags))" />
    </MudItem>
</InstancedDtoContentPage>

@code {
    BeamEffectInfo info = new();
}