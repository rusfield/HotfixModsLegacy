@using Microsoft.JSInterop;
@using HotfixMods.Infrastructure.Services

@inject ISnackbar Snackbar

<MudBadge Icon="@Icons.Material.Filled.Close" Color="Color.Primary" Overlap="true" OnClick="(() => Dialog.Cancel())" Class="py-4">
    <MudDialog>
        <DialogContent>
            <MudStack Justify="Justify.Center" Spacing="5">
                <MudText Align="Align.Center">
                    <MudIcon Style="font-size: 4rem !important" Icon="@Icon" />
                </MudText>
                @foreach (var paragraph in Text.Split("\n"))
                {
                    <MudText Align="Align.Center">
                        @paragraph
                    </MudText>
                }
            </MudStack>
        </DialogContent>
    </MudDialog>
</MudBadge>
@code {
    [CascadingParameter]
    MudDialogInstance Dialog { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public string Icon { get; set; } = Icons.Material.Outlined.Info;

}