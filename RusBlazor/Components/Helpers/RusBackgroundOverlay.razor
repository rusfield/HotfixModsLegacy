<div class="@($"rus-background-overlay {(visible ? "visible" : "invisible")}")" @onclick="HandleClick" />


@code {
    [Parameter]
    public EventCallback OnClick { get; set; }

    bool visible = true;

    async void HandleClick()
    {
        Close();
        await OnClick.InvokeAsync();
    }

    public void Close()
    {
        visible = false;
    }
}
