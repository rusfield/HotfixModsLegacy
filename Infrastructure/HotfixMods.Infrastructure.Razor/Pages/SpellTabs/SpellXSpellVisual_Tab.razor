@inherits HotfixPageTabBase<SpellXSpellVisual>
@inject SpellService Service
@inject IDialogService DialogService

<MudCarouselItem Transition="TransitionHandler.Transition" CustomTransitionEnter="@TransitionHandler.EnterTransition" CustomTransitionExit="@TransitionHandler.ExitTransition">
    <MudGrid>
        <MudItem xs="3">
            <Input_Element T="decimal" @bind-Value="Value.Probability" ValueCompare="ValueCompare?.Probability" Label="@nameof(Value.Probability).ToDisplayName()" />
            <Input_Element T="int" @bind-Value="Value.Priority" ValueCompare="ValueCompare?.Priority" Label="@nameof(Value.Priority).ToDisplayName()" />
            <Input_Element T="int" @bind-Value="Value.Flags2" ValueCompare="ValueCompare?.Flags2" Label="@nameof(Value.Flags2).ToDisplayName()" />
            <Input_Element T="byte" @bind-Value="Value.DifficultyId" ValueCompare="ValueCompare?.DifficultyId" Label="@nameof(Value.DifficultyId).ToDisplayName()" />
        </MudItem>
        <MudItem xs="6">
            <Placeholder_Element Amount="4" />
            <InlineGroup Merged="false">
                <LeftContent>
                    <Input_Element T="int" @bind-Value="Value.SpellIconFileId" ValueCompare="ValueCompare?.SpellIconFileId" Label="@nameof(Value.SpellIconFileId).ToDisplayName()" />
                </LeftContent>
                <RightContent>
                    <Input_Element T="int" @bind-Value="Value.ActiveIconFileId" ValueCompare="ValueCompare?.ActiveIconFileId" Label="@nameof(Value.ActiveIconFileId).ToDisplayName()" />
                </RightContent>
            </InlineGroup>
        </MudItem>
        <MudItem xs="3">
            <Input_Element T="ushort" @bind-Value="Value.ViewerUnitConditionId" ValueCompare="ValueCompare?.ViewerUnitConditionId" Label="@nameof(Value.ViewerUnitConditionId).ToDisplayName()" />
            <Input_Element T="uint" @bind-Value="Value.ViewerPlayerConditionId" ValueCompare="ValueCompare?.ViewerPlayerConditionId" Label="@nameof(Value.ViewerPlayerConditionId).ToDisplayName()" />
            <Input_Element T="ushort" @bind-Value="Value.CasterUnitConditionId" ValueCompare="ValueCompare?.CasterUnitConditionId" Label="@nameof(Value.CasterUnitConditionId).ToDisplayName()" />
            <Input_Element T="uint" @bind-Value="Value.CasterPlayerConditionId" ValueCompare="ValueCompare?.CasterPlayerConditionId" Label="@nameof(Value.CasterPlayerConditionId).ToDisplayName()" />
        </MudItem>
    </MudGrid>
</MudCarouselItem>