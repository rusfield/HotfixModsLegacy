<div class="@($"rus-modelbox-container center-content {(Required ? "required" : "")}")" style="@($"left:{X}px;top:{Y}px;")">
    <div class="rus-modelbox center-content">
        @TableName
    </div>
    @if(Right != null)
    {
        <div class="rus-modelbox-reference right" />
    }
    @if (Left != null)
    {
        <div class="rus-modelbox-reference left" />
    }
    @if (Top != null)
    {
        <div class="rus-modelbox-reference top" />
    }
    @if (Bottom != null)
    {
        <div class="rus-modelbox-reference bottom" />
    }
</div>


@code {
    [Parameter]
    public string? TableName { get; set; }

    [Parameter]
    public bool Required { get; set; } = false;

    [Parameter]
    public int X { get; set; }

    [Parameter]
    public int Y { get; set; }

    [Parameter]
    public (string, string)? Right { get; set; }

    [Parameter]
    public (string, string)? Left { get; set; }

    [Parameter]
    public (string, string)? Top { get; set; }

    [Parameter]
    public (string, string)? Bottom { get; set; }
}
